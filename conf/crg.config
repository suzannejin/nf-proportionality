/*
 * -------------------------------------------------
 *  Nextflow config file for running at CRG
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run proportionality.nf -profile crg,singularity
 */

params {
  config_profile_name = 'CRG profile'
  config_profile_description = 'Configuration to run on CRG cluster'

}

process {
    executor = 'crg'
    queue = 'long-sl7'
    maxRetries = 2
    cpus = 1
    time = { ( 4.h * task.attempt ) }
    memory = { (task.attempt == 1? '48.GB' : 
                task.attempt == 2? '64.GB': 
                '84.GB') }
    withName:get_software_versions {
        cache = false
        queue = 'short-sl7'
        maxRetries = 1
        cpus = { check_max( 1, 'cpus' ) }
        memory = { check_max( 1.GB, 'memory' ) }
        time = { check_max( 5.min, 'time' ) }
  }
}

timeline {
  enabled = true
  file = "${params.tracedir}/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}
tower {
  accessToken = '57cc4e09eb0909d18d9926731205dfff09a13cc4'
  enabled = true
}
